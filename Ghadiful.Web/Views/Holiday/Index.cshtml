@{
    ViewData["Title"] = "Holiday";
    var holidays = ViewBag.Holidays;
    var group = ViewBag.Group;
    var events = ViewBag.Events;
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="fw-bold py-3 mb-0 display-6">
        @ViewBag.Title
    </h1>
    <button class="btn btn-sm btn-success">Export to PDF</button>
</div>

<div class="stackblitz-container material">
    <div class="control-section">
        <div class="content-wrapper">
            <div id="Schedule">
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        let holidays = @Html.Raw( holidays);
        let group = @Html.Raw( group);
        let eventdata=@Html.Raw(events);
    </script>

    <script id="EventEditorTemplate" type="text/x-template">
            <table class="custom-event-editor" width="100%" cellpadding="5">
            <tbody>
                <tr>
                    <td class="e-textlabel">Title</td>
                    <td colspan="4">
                        <input id="Subject" class="e-field e-input" type="text" value="" name="Subject" style="width: 100%" />
                    </td>
                </tr>

                <tr>
                <td class="e-textlabel">From</td>
                    <td colspan="4">
                        <input id="StartTime" class="e-field" type="text" name="StartTime" />
                    </td>
                </tr>
                <tr>
                    <td class="e-textlabel">To</td>
                    <td colspan="4">
                        <input id="EndTime" class="e-field" type="text" name="EndTime" />
                    </td>
                </tr>
                <tr>
                    <td class="e-textlabel">Group</td>
                    <td colspan="4">
                        <input type="text" id="Groups" name="Groups" class="e-field" style="width: 100%" />
                    </td>
                </tr>
            </tbody>
        </table>
    </script>

    <script src="~/js/ghadiful.holiday.js"></script>

}