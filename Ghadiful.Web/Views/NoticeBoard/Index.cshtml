@using Ghadiful.ViewModel.NoticeBoard
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Notice Board";
}
@model List<NoticeBoardViewModel>
<h4 class="fw-bold py-3 mb-0">
    Notice Board
</h4>
<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@(item.i)" class="@(item.i == 0 ? "active":"")" aria-current="true" aria-label="Slide @(item.i)+1"></button>            
        }       
    </div>
    <div class="carousel-inner">
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
        <div class="carousel-item @(item.i == 0 ? "active":"")" data-bs-interval="15000">
            <div class="card" style="min-height:300px; text-align:center; padding:60px;">
                <div class="card-body">
                    <h5 class="card-title">@item.value.Title</h5>
                    <p class="card-text">@item.value.Content</p>
                </div>
            </div>           
       </div>  
    }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev" style="width:6%;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next" style="width:6%;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
