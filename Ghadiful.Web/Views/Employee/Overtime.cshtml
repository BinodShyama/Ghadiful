@{
    var emp = Model as EmployeeViewModel;
    var overtimeLimitSelectList = (ViewBag.OvertimeLimitData as List<OvertimeLimitViewModel>)
    .Select(x => new SelectListItem
            {
                Value = x.Id.ToString(),
                Text = x.Name
            }).ToList();
}


    <!-- Content -->
<div class="card mt-4">
    <div class="p-2">
        <div class="d-flex align-items-start align-items-sm-center gap-4">
            <img src="@Url.Content(String.Format("~/assets/img/avatars/{0}.png",emp.Id))"
                 alt="user-avatar"
                 class="d-block rounded"
                 height="96"
                 width="96"
                 id="uploadedAvatar" />
            <div class="button-wrapper">
                <h1 class="fw-bold pb-3 mb-0 display-6">
                    @Model.Name
                </h1>
                <span class="d-block">@emp.Position</span>
                <span cclass="d-block" style="margin:0">@emp.Organization</span>
            </div>
        </div>
    </div>
</div>
<div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row my-3">
                    <li class="nav-item">
                <a class="nav-link" href="@Url.Content(String.Format($"/employee/index/{emp.Id}"))"><i class="bx bx-user me-1"></i> Profile</a>
                    </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content(String.Format($"/employee/schedule/{emp.Id}"))"><i class="bx bx-link-alt me-1"></i> Schedule</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Content(String.Format($"/employee/overtime/{emp.Id}"))"><i class="bx bx-link-alt me-1"></i> Overtime</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content(String.Format($"/employee/leave/{emp.Id}"))"><i class="bx bx-link-alt me-1"></i> Leave</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content(String.Format($"/employee/report/{emp.Id}"))"><i class="bx bx-link-alt me-1"></i> Reports</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content(String.Format($"/employee/history/{emp.Id}"))"><i class="bx bx-bell me-1"></i> Service History</a>
            </li>
                </ul>
                <div class="card mb-4">                    
                    <!-- Overtime -->
                    
                    <hr class="my-0" />
                    <div class="card-body">
                        <form id="formAccountSettings" method="POST" onsubmit="return false">
                            <div class="row">      
                            <div class="mb-3 col-md-6">
                            <label for="Designation" class="form-label">Overtime Limit</label>
                                <select class="form-select" asp-for="@emp.OvertimeLimitId" asp-items="@overtimeLimitSelectList"></select>
                            </div>                                                    
                            </div>                           
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2">Save changes</button>
                                <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                            </div>
                        </form>
                    </div>
                    <!-- /Account -->
                </div>
